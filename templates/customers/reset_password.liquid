<!-- /templates/customers/reset_password.liquid -->
{% section 'banner--account' %}

<div class="customer__form">
{% form 'reset_customer_password' %}
{{ form.errors | default_errors }}

<label for="password">{{'customer_area.forms.password' | t}}</label>
<input type="password" value="" name="customer[password]" size="16" />

<label for="password_confirmation">{{'customer_area.forms.confirm_password' | t}}</label>
<input
  type="password"
  value=""
  name="customer[password_confirmation]"
  size="16"
/>

<input type="submit" class="button button--primary button--filled button--primary__filled" value="{{'customer_area.forms.reset_password' | t}}" />

{% endform %} 
</div>