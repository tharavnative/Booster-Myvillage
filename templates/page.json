{
  "sections": {
    "banner": {
      "type": "banner--page",
      "settings": {
        "layout": "boxed",
        "height": 300,
        "horizontalAlignment": "start",
        "verticalAlignment": "middle",
        "fontSize": "big",
        "contentColor": "#3982a0",
        "fillColor": "rgba(0,0,0,0)",
        "defaultBackgroundImage": "{{ page.metafields.custom.banner_image.value }}",
        "overlayOpacity": 0,
        "overlayColor": "#000000"
      }
    },
    "content": {
      "type": "page",
      "settings": {
        "layout": "default",
        "enableShortcodes": true
      }
    }
  },
  "order": [
    "banner",
    "content"
  ]
}
